# Can be run in batch, without graphic
# or interactively: Idle> /control/execute run_proton.mac

# Verbose
/control/verbose 0
/run/verbose 0
/event/verbose 0
/tracking/verbose 0

# proton 1000 MeV to the direction (0.,0.,1.)
/gun/particle proton
/gun/position 0 0 -5 m
/gun/energy 1000 MeV

/run/beamOn 100000
